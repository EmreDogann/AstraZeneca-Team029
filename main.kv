<Manager>:
    id: screen_manager

    homeScreen: homeScreen
    spellCheckerScreen: spellCheckerScreen

    HomeScreen:
        id: homeScreen
        name: "homeScreen"
        manager: screen_manager

    SpellCheckerScreen:
        id: spellCheckerScreen
        name: "spellCheckerScreen"
        manager: screen_manager

<RoundedButton@Button>
    font_size: '20sp'
    font_name: "./Fonts/OpenSans-Regular.ttf"
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: hex('#8f8f8f') if self.state=='normal' else hex('#b8b8b8')  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [25]

<RoundedButtonSmall@Button>
    font_size: '20sp'
    font_name: "./Fonts/OpenSans-Regular.ttf"
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: hex('#8f8f8f') if self.state=='normal' else hex('#b8b8b8')  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20]

<CustomListLabel@Label>:
    font_size: '20sp'
    font_name: "./Fonts/OpenSans-Regular.ttf"
    halign: 'left'
    valign: 'top'
    text_size: self.size[0]-40, self.size[1]-30
    size_hint_x: None
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: hex('#a3a3a3')
        RoundedRectangle:
            pos: self.pos
            size: self.size[0]-5, self.size[1]-5
            radius: [10]

<ListButton@Button>
    font_size: '20sp'
    font_name: "./Fonts/OpenSans-Regular.ttf"
    background_color: (0,0,0,0)
    on_press: root.correctSpelling()
    canvas.before:
        Color:
            rgba: hex('#8f8f8f') if self.state=='normal' else hex('#b8b8b8')  # visual feedback of press
        RoundedRectangle:
            pos: self.pos
            size: self.size[0]-5, self.size[1]-5
            radius: [10]

<Separator@Widget>:
    canvas:
        Color:
            rgba: hex('#c9c9c9')
        Rectangle:
            pos: self.pos
            size: self.size

<VSeparator@Separator>:
    size_hint_x: None
    width: dp(2)